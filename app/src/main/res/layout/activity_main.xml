<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">

    <!-- Input text area -->
    <EditText
        android:id="@+id/smaliInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Enter Smali code"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:scrollbars="vertical"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        style="@style/DarkEditText" />

    <!-- Buttons for Clear Screen and Paste from Clipboard, arranged horizontally -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Clear Screen button -->
        <Button
            android:id="@+id/clearScreenButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Clear Screen"
            android:padding="12dp"
            style="@style/DarkButton" />

        <!-- Paste from Clipboard button -->
        <Button
            android:id="@+id/pasteClipboardButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paste from Clipboard"
            android:padding="12dp"
            style="@style/DarkButton" />

    </LinearLayout>

    <!-- Output text area -->
    <EditText
        android:id="@+id/regexOutput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Generated Regex"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:scrollbars="vertical"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:clickable="false"
        style="@style/DarkEditText" />

    <!-- Copy Regex button -->
    <Button
        android:id="@+id/copyRegexButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy Regex"
        android:padding="12dp"
        style="@style/DarkButton" />

</LinearLayout>
